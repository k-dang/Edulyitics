extends layout

block content
  h1 Login
  form(role="form", action="/auth/login", method="post")
    .form-group
      label(for="first_name") First Name
      input#first_name.form-control(name="first_name", type="text")
    .form-group
      label(for="password") Password
      input#password.form-control(name="password", type="password")

    p
      a.btn.btn-link(href="/") Back
      button.btn.btn-default(type="submit" value="Login") Login


